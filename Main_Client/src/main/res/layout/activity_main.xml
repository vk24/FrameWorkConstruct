<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.vinkoworktest.view.MainAct">

    <include layout="@layout/common_tool_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="姓名"
                />
            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="年龄"
                />
            <EditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="个人签名"
                />
            <Button
                android:id="@+id/btn_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写入数据库"/>

            <com.example.framework.widget.PayEditText
                android:id="@+id/et_pay"
                android:textColor="@color/color_blue_light"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/im_"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
